extends /extends/_layout

block vars
	- signedIn = true
	- isProblems = true

block title
	+title('解答詳細')

block riot_tags
	+riot_script('answer-detail')
	+riot_script('answer-edit')

block content
	.page-header
		h1 解答詳細
	ul.nav.nav-tabs(role='tablist')
		li.active(role='presentation')
			a#answer-detail-tab(tabindex='1', role='tab', aria-controls='answer-detail', href='#answer-detail', data-toggle='tab')
				i.fa.fa-search
				|  詳細
		li(role='presentation')
			a#answer-edit-tab(tabindex='1', role='tab', aria-controls='answer-edit', href='#answer-edit', data-toggle='tab')
				i.fa.fa-edit
				|  編集
	.tab-content
		.tab-pane.in.active#answer-detail(role='tabpanel', aria-labelledby='answer-detail-tab')
			answer-detail
		.tab-pane#answer-edit(role='tabpanel', aria-labelledby='answer-edit-tab')
			answer-edit
