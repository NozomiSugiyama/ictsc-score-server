extends /extends/_layout

block vars
	- signedIn = true
	- isTeams = true

block title
	+title('チーム一覧')

block content
	.page-header
		h1 チーム一覧
	.table-responsive
		table.table.table-striped.table-hover.table-condensed
			thead
				tr
					th 番号
					th チーム名
					th 所属
					th メンバー数
					th 総スコア
			tbody
				tr
					th
						a(href='/teams/detail.html') 1
					td
						a(href='/teams/detail.html') WCDI
					td 日本工学院八王子専門学校
					td
						a(href='/teams/detail.html') 5
					td
						a(href='/answers/scores/detail.html') 100
				tr
					th
						a(href='/teams/detail.html') 2
					td
						a(href='/teams/detail.html') ISL
					td 明治大学
					td
						a(href='/teams/detail.html') 3
					td
						a(href='/answers/scores/detail.html') 200
				tr
					th
						a(href='/teams/detail.html') 3
					td
						a(href='/teams/detail.html') にせつむり(ゆかいな仲間たち)
					td 大阪情報コンピュータ専門学校
					td
						a(href='/teams/detail.html') 5
					td
						a(href='/answers/scores/detail.html') 300
				tr
					th
						a(href='/teams/detail.html') 4
					td
						a(href='/teams/detail.html') 専門学校穴吹コンピュータカレッジ
					td 専門学校穴吹コンピュータカレッジチーム
					td
						a(href='/teams/detail.html') 5
					td
						a(href='/answers/scores/detail.html') 400
	.page-header
		h2 チーム作成
	form(action='/teams/list.html', name='form-team-creation')
		.form-group
			label(for='input-team-name') チーム名
			input.form-control#input-team-name(type='text')
		.form-group
			label(for='input-school') 所属
			input.form-control#input-school(type='text')
		.text-right
			button.btn.btn-primary(type='submit') 作成
