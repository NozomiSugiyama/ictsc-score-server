h1.p-page-title 問題一覧

table(*ngFor="let gropu of problems")
  thead
    tr
      th.c-group-heading(colspan='2') {{ gropu.title }}
      th 締切
      th 質問
      th 公開
  tbody
    tr(*ngFor="let item of gropu.items", [ngClass]="{'past-due': compTime(item.closed_at, 3)}")
      th 問題 {{ item.id }}
      td
        a([routerLink]="[item.id]") {{ item.title }}
      td([ngClass]="{'c-close-to-due': compTime(item.closed_at, 1)}")
        i.fa.fa-fw.fa-hourglass-start
        | {{ item.closed_at | time }}
      td
        i.fa.fa-fw.fa-question-circle
        | todo 2 (3 分前)
      td([ngClass]="{'c-close-to-due': compTime(item.opened_at, 2)}")
        i.fa.fa-fw.fa-arrow-circle-up
        | {{ item.opened_at | time }}

