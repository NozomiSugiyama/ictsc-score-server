extends /extends/_layout

block title
	+title('サインアップ')

block content

	h1.page-title.page-title_type_bordered サインアップ

	form.form-panel(name='form-signin', action='/dashboard.html')

		.form-item
			label(for='input-member-name') ユーザー名
			input#input-member-name(type='text', name='member-name')
			p.supplement 本名で入力してください

		.form-item
			label(for='input-team-name') チーム名
			select#input-team-name(name='team-name')
				option(value='0') チーム名を選択してください

		.form-item
			label(for='static-school-name') 所属
			p#static-school-name.supplement.supplement__important チーム名を選択すると自動表示されます

		.form-item
			label(for='input-member-id') メンバー ID
			input#input-member-id(type='text', name='member-id')
			p.supplement 半角英数字、ハイフン("-")、アンダースコア("_")、ピリオド(".")、xx 〜 xx 文字

		.form-item
			label(for='input-password') パスワード
			input#input-password(type='password', name='password')

		button.button.button_color_green.button_size_large.button_of_signup.center-block(type='submit') サインアップ

		a.alternative-link(href='/signin.html') サインインはこちら
