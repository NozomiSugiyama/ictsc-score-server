              p.p-supplement 解答締め切り
              span.c-closed-at {{ problem.closed_at | time }}
            .l-row-panel__body {{ problem.id }} {{ problem.title }}
  .l-column.l-column_size_1of3
    .l-row
      section
        .l-row__header
          h1.c-title 質問・補足のアップデート
        .l-row__body
          a.l-row-panel(*ngFor="let notification of notifications", [routerLink]="notification.link")
            .l-row-panel__header([ngSwitch]="notification.type")
              span.p-notification-label.p-notification-label_type_supplement(*ngSwitchCase="1") 問題
              span.p-notification-label.p-notification-label_type_problem_comment(*ngSwitchCase="2") 補足
              span.p-notification-label.p-notification-label_type_question(*ngSwitchCase="3") 質問
              span.p-notification-label(*ngSwitchDefault) その他
            .l-row-panel__body {{ notification.resource_id }}. {{ notification.text }}
            .l-row-panel__footer.u-cf
              .p-post-meta.pull-right {{ notification.created_at | time }}
