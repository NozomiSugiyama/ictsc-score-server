extends /extends/_layout

block title
	+title('トップ')

block content

	h1.hidden トップ

	.column.column_thickness_thin
		.row
			section
				.row__header
					h1.title お知らせ
				.row__body
					.panel
						section
							.panel__header
								h1.title
									i.fa.fa-fw.fa-thumb-tack(aria-hidden='true')
									| スケジュール
								button.icon-button.icon-button_type_edit.fa.fa-pencil(type='button', aria-label='編集')
								button.text-button.text-button_type_cancel.pull-right(type='button') キャンセル
