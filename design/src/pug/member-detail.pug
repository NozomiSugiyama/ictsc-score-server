extends /extends/_layout

block title
	+title('赤座あかり - メンバー詳細')

block content

	h1.p-page-title.p-page-title_type_bordered.p-page-title_with_button
		.p-page-title__left
			.p-page-title__entry-number
				i.fa.fa-fw.fa-user
				| Member no.
				.c-figure  1
		.p-page-title__right
			span.c-member-name 赤座あかり
			input.shortened-input#input-member-name(type='text', name='member-name', placeholder='フルネームで入力')
			.c-editorial-buttons.c-editorial-buttons--inline
				.c-button-wrapper
					button(type="submit").p-button.p-button_color_gray.p-button_size_small 編集取消
				.c-button-wrapper
					button(type="submit").p-button.p-button_color_green 保存
		button.p-icon-button.p-icon-button_type_edit.fa.fa-pencil(type='button', aria-label='編集')

	.form-horizontal.u-member-detail.center-block
		.form-group
			label.col-xs-2.control-label メンバー ID
			.col-xs-10
				p.form-control-static.pull-left akkarin
				input.shortened-input#input-member-id(type='text', name='member-id', placeholder='任意のメンバー ID を入力')
				.c-editorial-buttons.c-editorial-buttons--inline
					.c-button-wrapper
						button(type="submit").p-button.p-button_color_gray.p-button_size_small 編集取消
					.c-button-wrapper
						button(type="submit").p-button.p-button_color_green 保存
				button.p-icon-button.fa.fa-pencil(type='button', aria-label='編集')
		.form-group
			label.col-xs-2.control-label ロール
			.col-xs-10
				p.form-control-static.pull-left 参加者
				.p-form-item
					select.shortened-input#input-role(name='team-role')
						option(value='0') ロールを選択してください
					.c-editorial-buttons.c-editorial-buttons--inline
						.c-button-wrapper
							button(type="submit").p-button.p-button_color_gray.p-button_size_small 編集取消
						.c-button-wrapper
							button(type="submit").p-button.p-button_color_green 保存
					button.p-icon-button.fa.fa-pencil(type='button', aria-label='編集')
		.form-group
			label.col-xs-2.control-label.separator
				i.fa.fa-circle
		.form-group
			label.col-xs-2.control-label 所属とチーム
			.col-xs-10
				p.form-control-static.pull-left 七森中学校 / すこし長めのチーム名
		.form-group
			label(for='input-password').col-xs-2.control-label パスワード
			.col-xs-10
				.p-form-item
					p.form-control-static.pull-left ******
					input.shortened-input#input-password(type='password', name='password', placeholder='新しいパスワードを入力')
					.c-editorial-buttons.c-editorial-buttons--inline
						.c-button-wrapper
							button(type="submit").p-button.p-button_color_gray.p-button_size_small 編集取消
						.c-button-wrapper
							button(type="submit").p-button.p-button_color_green 保存
					button.p-icon-button.fa.fa-pencil(type='button', aria-label='編集')
