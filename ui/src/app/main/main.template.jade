- var signedIn = true
- var isAccounts = true
- var isTeams = true
- var isProblems = true
- var isQuestions = true
- var isAnswers = true

header
  .p-header.u-cf
    a([routerLink]="['/']")
      img.c-logo(src='/assets/img/logo/ictsc-logo-white.svg', width='117', height='50' alt='ICTSC のロゴ')
    .p-header__left
      ul.p-list
        li.p-list__item
          a(href='/guide.html') ガイド
        li.p-list__item
          a([routerLink]="['members']") メンバー
        li.p-list__item
          a([routerLink]="['teams']") チーム
        li.p-list__item
          a(href='/team-detail.html') (自分のチーム)
    .p-header__right
      ul.p-list
        li.p-list__item
          a([routerLink]="['/']") トップ
            .notification-badge
        li.p-list__item
          a([routerLink]="['problems']") 問題
        li.p-list__item
          a([routerLink]="['issue']") 質問
        li.p-list__item
          a(href='/answer-list.html') 解答
        li.p-list__item
          a(href='/signin.html') ログアウト
    .c-clock
      .c-clock__date 8/27
      .c-clock__time 13:02

main
  .p-container.u-cf
    router-outlet

.container
  footer(style="border-top: 1px solid #eee; margin: 20px 0; padding: 20px 0")
    ul.nav.nav-pills
      li(*ngFor="let link of ['/','login', 'members', 'teams', 'teams', 'problems', 'issue']")
        a([routerLink]="[link]") {{link}}
